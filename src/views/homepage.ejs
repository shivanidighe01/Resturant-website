    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- scroll trigger -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js" 
    integrity="sha512-onMTRKJBKz8M1TnqqDuGBlowlH0ohFzMXYRNebz+yOcc5TQr/zAKsthzhuv0hiyUKEiQEQXEynnXCvNTOk50dg==" 
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</head>
<body>
    <div id="main">
        <div id="nav">
            <div class="logo">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS5oS_MzgZ5NOSyfW-3BtWWWGBmwdKwOZJFD_N5H3aJPPxS4KG9XV99VX6IFsDhH1HPufo&usqp=CAU" alt="Restaurant Logo">
              </div>
              <nav>
                <ul class="nav-links">
                  <li><a href="#">Home</a></li>
                  <li><a href="#">About</a></li>
                  <li><a href="#">Menu</a></li>
                  <li><a href="#">Contact</a></li>
                </ul>
              </nav>
              <div class="cart-buttons">
                <button class="btn">Add</button>
                <button class="btn">Order</button>
              </div>
        </div>
        <div id="container">
            <div id="cont-ele" class="text">
                <h1>The Best Restaurants In Your Home</h1>
                <p>Order from our exquisite menu and experience culinary delights delivered to your doorstep.</p>
                <button id="text-btn" class="btn" style="width: 150px;font-size: 18px; font-weight: 500;">Order Now!!</button>
            </div>
            <div id="cont-ele" class="image">
                <img src="https://bslthemes.com/html/quickeat/assets/img/photo-1.png" alt="">
            </div>
        </div>
        <div id="how-works">
          <h1 class="center-heading">How It Works</h1>
          <div class="work-flow">
            <div class="flow-container">
              <img src="https://bslthemes.com/html/quickeat/assets/img/illustration-1.png" alt="Select Menu">
              <h3><span>01</span>Select Menu</h3>
              <p>Select your favourite dish from our exquisite menu.</p>
            </div>
            <div class="flow-container">
              <img src="https://bslthemes.com/html/quickeat/assets/img/illustration-2.png" alt="Place Order">
              <h3><span>02</span>Place Order</h3>
              <p>Fill your details and click on PLACE ORDER.</p>
            </div>
            <div class="flow-container">
              <img src="https://bslthemes.com/html/quickeat/assets/img/illustration-3.png" alt="Wait for Delivery">
              <h3><span>03</span>Wait for Delivery</h3>
              <p>Wait to get delivery of your delicious food.</p>
            </div>
          </div>
        </div>
        <div id="testimonial">
          <h3>Service shows good taste</h3>
          <div id="comp"><span>900+</span> <p>happy coustomers</p></div>
          <div id="comp"><span>1K+</span> <p>food deliverd</p></div>

        </div>
        
    </div>
    <script src="/javascript/homepage.js"></script>
